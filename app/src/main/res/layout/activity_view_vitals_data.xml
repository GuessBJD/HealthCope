<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".viewVitalsData">

    <LinearLayout
        android:id="@+id/viewDate"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="@color/colorPrimaryVariant"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Today"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:backgroundTint="@color/colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewDate">

        <LinearLayout
            android:id="@+id/heartRateCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/main_background"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="@string/heart_rate"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/heartRateData"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:textAlignment="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/main_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="@string/blood_pressure"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/bloodPressureData"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:textAlignment="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/main_background"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heartRateCell">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="@string/body_temperature"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/bodyTempData"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:textAlignment="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/main_background"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heartRateCell">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="@string/blood_glucose"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/bloodGlucoseData"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:textAlignment="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/main_background"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heartRateCell">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="@string/oxygen_saturation"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/oxygenSaturationData"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:textAlignment="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>