<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".BodyMeasurements">



    <RelativeLayout
        android:id="@+id/height_display"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:background="@drawable/main_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp">

        <TextView
            android:id="@+id/height_txt"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="View data"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"  />

        <ImageButton
            android:id="@+id/viewMeasurement_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/height_txt"
            android:contentDescription="@string/height_details"
            app:srcCompat="@drawable/ic_arrow_forward"
            android:background="@null"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/blood_pressure_display"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/main_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height_display">

        <TextView
            android:id="@+id/blood_pressure_txt"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="Add new data"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"  />


        <ImageButton
            android:id="@+id/add_body_measurement_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/blood_pressure_txt"
            android:contentDescription="@string/blood_pressure_details"
            app:srcCompat="@drawable/ic_arrow_forward"
            android:background="@null"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>